{
  "name": "openblocks-wallet",
  "displayName": "Openblocks wallet",
  "version": "0.0.1",
  "description": "Openblocks Wallet: The modular crypto wallet; Especially, opensource.",
  "author": "Tu Phan <tuphan@gears.bot>",
  "scripts": {
    "dev": "concurrently --names DEV,LINT -c cyan,yellow 'pnpm dev:watch' 'pnpm lint:watch'",
    "dev:watch": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint src",
    "lint:watch": "nodemon --watch src --ext ts,tsx --exec 'pnpm lint' --signal SIGTERM"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "dayjs": "^1.11.11",
    "numbro": "^2.5.0",
    "plasmo": "^0.87.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.4.5",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "daisyui": "^4.12.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.2",
    "globals": "^15.4.0",
    "nodemon": "^3.1.3",
    "postcss": "^8.4.38",
    "sass": "^1.77.5",
    "tailwindcss": "^3.4.4",
    "typescript-eslint": "^7.13.0"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs"
    ]
  }
}
